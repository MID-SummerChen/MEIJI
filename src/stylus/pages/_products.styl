.products
    background-color: #C3E0F1
    .section.nav
        height: 350px
        background-color: #EBF6FF
        background-image: url('/imgs/milk03.png'), url('/imgs/list-bg.jpg')
        background-position: center 225px, center center
        background-repeat: no-repeat
    .section.content
        // min-height: 800px
        background-color: #EBF6FF
        background-image: url('/imgs/products-bg.png')
        background-position: center top
        // background-image: url('/imgs/bg-left.png'), url('/imgs/bg-right.png')
        // background-position: left top, right top
        // background-repeat: no-repeat
        .top-selector
            border-bottom: 1px solid #aaa
            padding: 15px 0
            h2.font
                margin-right: 35px
                font-size: 25px
                color: #666
                position: relative
                &.active
                    &:after 
                        content: ""
                        display: block 
                        position: absolute
                        right: 0
                        top: 0
                        margin-right: -18px
                        margin-top: 15px
                        border-top: 5px solid #666
                        border-left: 5px solid transparent
                        border-right: 5px solid transparent

        .main 
            padding: 30px 0
            &:after 
                @extend .clearfix
            .side-nav
                float: left
                width: 30% 
                padding-right: 30px
                h2 
                    background-color: #fff 
                    border-radius: 30px 
                    color: #000
                    font-size: 18px 
                    font-weight: bold
                    text-align: center
                    padding: 12px 0

                .list 
                    margin-top: 20px 
                    a 
                        color: #333 
                        display: block 
                        padding: 15px 0
                        margin: 10px 0
                        border-bottom: 1px solid #aaa
                        text-decoration: none
                        .icon 
                            vertical-align: middle
                            margin-right: 20px



            .products-area
                float: left
                width: 70% 
                .cardGroup
                    .card 
                        text-align: center
                        margin-bottom: 30px
                        img 
                            width: 100%
                            height: 200px
                            border-radius: 5px 
                            overflow: hidden 
                        p.title 
                            font-size: 16px
                            font-weight: bold 
                            margin-top: 10px
                            margin-bottom: 5px
                        p.intro 
                            font-size: 14px
                            color: #888
                        h4 
                            color: dark-blue
                            font-weight: bold 
                            margin-top: 12px
                            span
                                font-size: 14px
                                margin-left: 5px 
                                letter-spacing: 3px